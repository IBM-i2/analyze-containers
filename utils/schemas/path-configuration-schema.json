{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://i2group.github.io/analyze-containers/schemas/connector-definition-schema.json",
  "title": "JSON schema for the Analyze Containers repository references file",
  "type": "object",
  "properties": {
    "sharedConfigurations": {
      "type": "object",
      "description": "Specify shared configuration repositories for analyze-containers",
      "default": {
        "rootDirectory": "",
        "repositories": []
      },
      "properties": {
        "rootDirectory": {
          "type": "string",
          "description": "The path to the root of the shared repositories (workspace)."
        },
        "repositories": {
          "type": "array",
          "description": "List of repository objects.",
          "items": {
            "type": "object",
            "default": {
              "path": ""
            },
            "properties": {
              "path": {
                "type": "string",
                "description": "The path to the configuration repository (folder structure)."
              },
              "configs": {
                "type": "array",
                "description": "List of config names.",
                "default": [
                  ""
                ],
                "items": {
                  "type": "string"
                }
              },
              "connectors": {
                "type": "array",
                "description": "List of connector names.",
                "default": [
                  ""
                ],
                "items": {
                  "type": "string"
                }
              },
              "extensions": {
                "type": "array",
                "description": "List of extension names.",
                "default": [
                  ""
                ],
                "items": {
                  "type": "string"
                }
              },
              "plugins": {
                "type": "array",
                "description": "List of plugin names.",
                "default": [
                  ""
                ],
                "items": {
                  "type": "string"
                }
              },
              "dataSets": {
                "type": "array",
                "description": "List of data set names.",
                "default": [
                  ""
                ],
                "items": {
                  "type": "string"
                }
              },
              "gatewaySchemas": {
                "type": "array",
                "description": "List of gateway schema names.",
                "default": [
                  ""
                ],
                "items": {
                  "type": "string"
                }
              },
              "additionalResources": {
                "type": "array",
                "description": "List of additional resources.",
                "default": [
                  ""
                ],
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "path"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "rootDirectory"
        ],
        "additionalProperties": false
      }
    },
    "upgradeDirectory": {
      "type": "string",
      "description": "The path to the root of a previous analyze-containers directory."
    },
    "externalDirectories": {
      "type": "array",
      "description": "List of external i2 Analyze deployment toolkit and analyze-containers directories",
      "items": {
        "type": "object",
        "default": {
          "name": "default",
          "path": ""
        },
        "properties": {
          "name": {
            "type": "string",
            "description": "The (unique) name of the i2 Analyze deployment toolkit or analyze-containers directory."
          },
          "path": {
            "type": "string",
            "description": "The path to the root directory of the i2 Analyze deployment toolkit or analyze-containers."
          }
        },
        "required": [
          "name",
          "path"
        ],
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}